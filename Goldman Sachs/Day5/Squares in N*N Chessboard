class Solution {
    static Long squaresInChessBoard(Long n) {
        // code here
        
        return n*(n+1)*(2*n+1)/6;
    }
};


// Another solution

class Solution {
  public:
    long long squaresInChessBoard(long long N) {
        // code here
        if(N==1) return 1;
        return (N*N)+squaresInChessBoard(N-1);
    }
};
